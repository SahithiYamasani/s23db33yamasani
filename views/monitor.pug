extends layout

block content
  h1= title
  -
    const results = result
  .container-fluid
  .row
    - for (var i = 0; i < results.length; i++)
      .col-sm-2
        h4= results[i].model
        h3(onclick=`buy(${i})`) BUY
        p Screen Size: #{results[i].screen_size} inches
        p Price: $#{results[i].price}

  script.
      function buy(index) {
        alert("You purchased item " + index);
      }
